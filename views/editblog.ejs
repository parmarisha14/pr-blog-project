<%- include("partials/header") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <div class="card shadow-lg rounded-4" style="background-color:#fff;">
        <div class="card-header bg-primary text-white rounded-top-4" style="text-align:center;">
          <h3 class="mb-0">Edit Profile / Blog</h3>
        </div>
        <div class="card-body p-4">

          <!-- Profile Info (optional) -->
          <% if (user) { %>
          <div class="mb-4 text-center">
            
            <h5><%= user.username %></h5>
            <p class="text-muted"><%= user.email %></p>
          </div>
          <% } %>

          <!-- Edit Blog Form -->
          <form action="/edit/<%= blog._id %>" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Blog Title</label>
              <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required style="padding:10px; border-radius:5px;">
            </div>

            <div class="mb-3">
              <label for="content" class="form-label">Blog Content</label>
              <textarea class="form-control" id="content" name="content" rows="5" required style="padding:10px; border-radius:5px; resize:none;"><%= blog.content %></textarea>
            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Image URL</label>
              <input type="text" class="form-control" id="image" name="image" value="<%= blog.image %>" style="padding:10px; border-radius:5px;">
            </div>

            <div class="d-flex justify-content-between">
              <a href="/profile" class="btn btn-secondary" style="padding:8px 16px;">Cancel</a>
              <button type="submit" class="btn btn-primary" style="padding:8px 16px;">Update Blog</button>
            </div>
          </form>

        </div>
      </div>

    </div>
  </div>
</div>

<body style="background-color:#f8f9fa;"></body>

<%- include("partials/footer") %>
