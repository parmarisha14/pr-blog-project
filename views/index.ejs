<%- include("partials/header") %>

<div class="container mt-5">
  <div class="row">
    <% if (blogs && blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-lg border-0 rounded-4 h-100">
            <!-- Blog Image -->
            <% if (blog.image) { %>
              <img src="<%= blog.image %>" class="card-img-top rounded-top-4" style="height:300px; object-fit:cover;">
            <% } %>

            <div class="card-body">
              <!-- Blog Title -->
              <h5 class="card-title fw-bold"><%= blog.title %></h5>

              <!-- Blog Content -->
              <p class="card-text text-muted"><%= blog.content.substring(0,150) %>...</p>

              <!-- Blog Image URL -->
             

              <p class="text-muted"><small>By: <%= blog.createdBy.username %></small></p>

              <!-- Comments -->
              <div class="mt-3">
                <h6>Comments:</h6>
                <% if (blog.comments && blog.comments.length > 0) { %>
                  <ul class="list-unstyled" style="max-height:120px; overflow-y:auto;">
                    <% blog.comments.forEach(comment => { %>
                      <li class="mb-1"><strong><%= comment.user %>:</strong> <%= comment.text %></li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p class="text-muted mb-1">No comments yet.</p>
                <% } %>
              </div>

              <!-- Add Comment Form -->
              <form action="/comment/<%= blog._id %>" method="POST" class="mt-2 d-flex">
                <input type="text" name="comment" class="form-control form-control-sm me-2" placeholder="Add a comment..." required>
                <button type="submit" class="btn btn-sm btn-primary">Comment</button>
              </form>
            </div>

            <!-- Like & Dislike Buttons -->
            <div class="card-footer d-flex justify-content-between">
              <form action="/like/<%= blog._id %>" method="POST" class="d-inline">
                <button class="btn btn-outline-primary btn-sm">ğŸ‘ Like (<%= blog.likes || 0 %>)</button>
              </form>
              <form action="/dislike/<%= blog._id %>" method="POST" class="d-inline">
                <button class="btn btn-outline-danger btn-sm">ğŸ‘ Dislike (<%= blog.dislikes || 0 %>)</button>
              </form>
            </div>

          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No blogs yet. Be the first to add one!</p>
    <% } %>
  </div>
</div>

<%- include("partials/footer") %>
